import java.util.*;
   
   public class Main{
   
   public static void main(String[] args) {
    // write your code here 
   Scanner scn = new Scanner(System.in);
    int n=scn.nextInt();
    int rev=0;
    int rem;
    System.out.println("Enter an integer=");
    while(n!=0){
        rem=n%10;
        rev=rev*10+rem;
        n/=10;
    }

    System.out.println("reverse of input number is=");
    System.out.println(rev);
    }
   }
